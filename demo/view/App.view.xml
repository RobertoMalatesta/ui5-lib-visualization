<mvc:View controllerName="sap.ui.demo.db.controller.App" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
  xmlns:layout="sap.ui.commons.layout" xmlns:viz="ui5.viz">

	<viz:Chart
		id="myChart"
		width="{store>/width}"
		height="{store>/height}"
		showTooltip="{store>/showTooltip}"
		groupedTooltip="{store>/groupedTooltip}"
		showLegend="{store>/showLegend}"
		xAxisType="Indexed"
		series="{store>/series}"
		zoomEnabled="true"
		showSubchart="true">
		<viz:series>
			<viz:ChartSeries
				name="{store>name}"
				data="{
					path: 'store>dataPoints',
					templateShareable: true
				}">
				<viz:data>
					<viz:ChartDataPoint value = "{store>}" label="myLabel"/>
				</viz:data>
			</viz:ChartSeries>
		</viz:series>
	</viz:Chart>
  <Panel headerText="Controller Test">
    <content>
      <Button text="click me" press="myFunction"/>
    </content>
  </Panel>
</mvc:View>

